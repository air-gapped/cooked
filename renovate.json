{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "gomod": {
    "postUpdateOptions": ["gomodTidy"]
  },
  "packageRules": [
    {
      "description": "Automerge minor/patch for stable Go deps",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "description": "Automerge minor/patch for GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Automerge patch-level Docker updates",
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Do not bump go directive in go.mod",
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "matchDepTypes": ["golang"],
      "enabled": false
    }
  ]
}
